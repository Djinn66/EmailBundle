<form method="post" action="{{ path('mail_delete', {'id': mail.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mail.id) }}">
    <button class="btn" {#onclick="this.parentElement.requestSubmit()"#}><i class="glyphicon glyphicon-trash"></i></button>
</form>
